<section class="section" data-section-id="{{ section.id }}" data-section-type="html">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h2" style="font-weight: 500; font-size: 56px; font-family: Marlide Display; margin-bottom: 0; color: #234240;">{{ section.settings.title | escape }}</h2>
      </header>
    {%- endif -%}

    <div class="html rte">
      {{ section.settings.html }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your title"
    },
    {
      "type": "html",
      "id": "html",
      "label": "HTML",
      "default": "<p>Write or copy/paste HTML code</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom HTML"
    }
  ]
}
{% endschema %}